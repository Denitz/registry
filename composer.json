{
    "name": "joomla/crypt",
    "type": "joomla-package",
    "description": "Joomla Crypt Package",
    "keywords": ["joomla", "framework", "crypt"],
    "homepage": "https://github.com/joomla-framework/crypt",
    "license": "GPL-2.0+",
    "require": {
        "php": "~7.0"
    },
    "require-dev": {
        "defuse/php-encryption": "~2.0",
        "paragonie/sodium_compat": "~1.0",
        "phpunit/phpunit": "~6.3",
        "squizlabs/php_codesniffer": "1.*",
        "symfony/polyfill-util": "~1.0",
        "symfony/phpunit-bridge": "~3.3"
    },
    "suggest": {
        "defuse/php-encryption": "To use Crypto cipher",
        "paragonie/sodium_compat": "To use Sodium cipher"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Crypt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Crypt\\Test\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
